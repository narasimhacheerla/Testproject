            <DataGrid x:Name="ContentDataGrid"  AutoGenerateColumns="False" >
               
                <DataGrid.Columns>
                    <DataGridTextColumn  Header="Name"  Width="100" IsReadOnly="True" Binding="{Binding FirstName}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="TextBlock.Foreground" Value="#336097" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="JobTitle" Width="100" IsReadOnly="True" Binding="{Binding CurrentPosition}"/>
                    <DataGridTextColumn Header="CurrentCompany" Width="100" IsReadOnly="True" Binding="{Binding CurrentCompany}"/>
                    <DataGridTextColumn Header="Location" IsReadOnly="True" Width="200" Binding="{Binding LocationToDisplay}"/>
                    <DataGridTextColumn Header="EmailAddress" IsReadOnly="True" Width="150" Binding="{Binding EmailAddress}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="TextBlock.Foreground" Value="#141AFF" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Updated" IsReadOnly="True" Width="100" Binding="{Binding UserProfileUpdated}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="Updated">
                                        <Setter Property="Foreground"  Value="DarkGreen"/>
                                    </Trigger>
                                    <Trigger Property="Text" Value="Notupdated">
                                        <Setter Property="Foreground"  Value="Red"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="InvitedDateTime" IsReadOnly="True" Width="100" Binding="{Binding CreatedDateTime,StringFormat={}\{0:dd/MM/yyyy\}}"/>
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="View" Click="ViewCv"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
